<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="2dp" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:elevation="3dp"
        android:layout_height="wrap_content"
        android:id="@+id/cc">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="1dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/nosentiment"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="NO SIGNIFICANT TWEETS"/>

            <TextView
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="country"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/sentiment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/country"
                android:padding="2dp"
                android:text="Sentiment"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sentiment"
                android:padding="2dp"
                android:text="wtf is this"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />

        </LinearLayout>



    </android.support.v7.widget.CardView>



</RelativeLayout>